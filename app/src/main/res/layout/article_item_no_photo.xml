<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_item_card_view_id"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_small"

    android:elevation="1dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Headline -->
        <TextView
            android:id="@+id/article_item_headline_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_item_thumbnail_image_view_id"
            android:layout_margin="@dimen/space_really_small"

            android:textSize="@dimen/text_small"/>

        <!-- Snippet -->
        <TextView
            android:id="@+id/article_item_snippet_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_item_headline_text_view_id"
            android:layout_margin="@dimen/space_really_small"

            android:textSize="@dimen/text_ultra_small"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>